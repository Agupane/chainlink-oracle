{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "avoid-low-level-calls": "error",
    "compiler-version": ["warn", "^0.4.24"],
    "avoid-throw": "off",
    "var-name-mixedcase": "off",
    "mark-callable-contracts": "off",
    "no-simple-event-func-name": "off"
  }
}
